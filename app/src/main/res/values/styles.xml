<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">@android:color/white</item>
        <item name="searchVoiceIcon">@drawable/ic_mic</item>
        <item name="searchCloseIcon">@drawable/ic_clear</item>
        <item name="searchBackIcon">@drawable/ic_arrow_back</item>
        <item name="searchSuggestionBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:hint">@string/search_hint</item>
    </style>

</resources>
